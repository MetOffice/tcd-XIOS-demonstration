<context>

  <calendar type="Gregorian"/>

  <grid_definition>
    <grid id="original_grid_read">
      <domain id="original_domain_read" type="rectilinear" />
    </grid>
    <grid id="resampled_grid_read">
      <domain id="resampled_domain_read" type="rectilinear" />
    </grid>
  </grid_definition>

  <file_definition type="one_file">
    <file id="din" name="domain_input" output_freq="1ts" mode="read" enabled=".true.">
      <field id="odatax" name="original_data" grid_ref="original_grid_read" operation="instant" read_access=".true." />
      <field id="edatax" name="resample_data" grid_ref="resampled_grid_read" operation="instant" read_access=".true." />
    </file>
  </file_definition>
  
</context>
